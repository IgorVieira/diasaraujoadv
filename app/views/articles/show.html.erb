

<div class="section">
 
  <div class="row">
   

    <div class="col s12 m7">
      
      <h1><%= @article.title%></h1>
      <hr>
      <div><%= @article.body.html_safe%></div>
      <hr>

      <div class="col s12 m12">
          <div class="row valign-wrapper">
            <div class="col s2">
              <%= image_tag @article.avatar.url(:thumb), class:' circle responsive-image' %>
            </div>
            <div class="col s10 offset-l1">
              <span class="black-text">
                <%= @article.description_author.html_safe%></h1>.
              </span>
            </div>
          </div>
      </div>
      <hr>  

      <% if user_signed_in? %>
        <%= link_to "Edit article", edit_article_path(@article) %> |
        <%= link_to "Delete article", article_path(@article), method: :delete, data:{confirm: "Are you sure?"} %>
      <% end %>

    

    </div>


   <div class="col s12 m4 card board-article">
      <h4 class="center black-text">Outros artigos</h4>
      <hr>
        <% @other_articles.each do |o| %>
            <ul>
                <i class="fa fa-bookmark-o" aria-hidden="true"></i>  <%= link_to o.title, o %>
            </ul>
        <%end%>
   </div>
    

   <div>
    
   </div>

  </div>


</div>